<div class="container text-center">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1" style="border-collapse: collapse">
        <thead>
          <tr>
  	        <h5 class="text-center" style="color: limegreen"><%= flash[:success] %></h5>
  	      </tr>
          <h3 class="text-center"><%= @shop.name %>の詳細ページ</h3>
        </thead>
        <tbody>
          <tr style="text-align: center;">
            <h5 class="text-left">
              <i class="fa fa-history"></i><%= link_to "戻る", admin_shops_path %>
            </h5>
          </tr>
          <tr>
            <th>店名</th>
            <td><%= @shop.name %></td>
          </tr>
          <tr>
            <th>お店の紹介文</th>
            <td><%= @shop.introduction %></td>
          </tr>
          <tr>
            <th>お店の写真</th>
            <td>
            <% if @shop.shop_images.present? %>
              <% @shop.shop_images.each do |shop_image| %>
                <%= attachment_image_tag shop_image, :shop_image, :fill, 200, 200 %>
              <% end %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "200x200" %>
            <% end %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @shop.address %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @shop.genre.name %></td>
          </tr>
          <tr>
            <th>営業時間</th>
             <td><%= @shop.start_business_hours.strftime('%H:%M') %>〜<%= @shop.finish_business_hours.strftime('%H:%M') %></td>
          </tr>
          <tr>
            <th>最寄駅</th>
            <td><%= @shop.station %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @shop.phone_number %></td>
          </tr>
          <tr>
            <th>ホームページ</th>
            <td>
            <% if @shop.home_page == "なし" %>
              なし
            <% else %>
              <%= link_to @shop.home_page do %>
                <%= @shop.name %>のホームページリンク
              <% end %>
            <% end %>
            </td>
          </tr>
          <tr>
            <th>休日</th>
             <td><%= @shop.holiday %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= link_to "編集する", edit_admin_shop_path(@shop), :class => "btn btn-primary"  %>&nbsp;&nbsp;&nbsp;
              <%= link_to "削除する", admin_shop_path(@shop), method: :delete, :class => "btn btn-primary"  %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>