<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <div>
          <i class="fa fa-history"></i><%= link_to "戻る", user_path(current_user) %>
        </div>
<br>

        <%= render 'layouts/error_messages', messages: @contact %>

        <h3 class="mt-1 mb-3">お問い合わせ画面</h3>
        <%= form_with model: @contact, url: contacts_path, local: true do |f| %>

        <div class="form-group">
          <%= f.label :name, "お名前", :class => "form-label" %>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", :class => "form-label" %>
          <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "お問い合わせタイトル", :class => "form-label" %>
          <%= f.text_field :title, autocomplete: "title", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :message, "お問い合わせ内容", :class => "form-label" %>
          <%= f.text_area :message, autocomplete: "introduction", :class => "form-control;", :style => "width: 513px; height:200px" %>
        </div>

        <div class="actions">
          <%= f.submit "送信する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

