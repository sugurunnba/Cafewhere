<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table border="1">
        <thead>
          <tr>
            <i class="fa fa-history"></i><%= link_to "戻る", newses_path %>
          </tr>
          <tr>
            <th>お知らせタイトル</th>
            <td><%= @news.title %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <td><%= attachment_image_tag @news, :news_image, size: "400x400" %></td>
          </tr>
          <tr>
            <th>お知らせ本文</th>
            <td><%= simple_format(@news.text) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

