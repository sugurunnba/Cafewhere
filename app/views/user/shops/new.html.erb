<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <div>
          <i class="fa fa-history"></i><%= link_to "戻る", 'javascript:history.back()' %>
        </div>
<br>

        <%= render 'layouts/error_messages', messages: @shop %>

        <h3 class="mt-1 mb-3">登録リクエストフォーム</h3>
        <%= form_with model: @shop, url: shops_path, local:true do |f| %>

        <div class="form-group">
          <%= f.label :shop_image, "写真", :class => "form-label" %>&nbsp;<span class="label label-danger">6枚まで選択可能です</span>
          <%= f.attachment_field :shop_images_shop_images, multiple: true, :class => "form-control" %>
          <!--<!= f.attachment_field :shop_image, autocomplete: "shop_image", :class => "form-control" %>-->
        </div>

        <div class="form-group">
          <%= f.label :name, "店名", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "お店紹介文", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :introduction, autocomplete: "introduction", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :address, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre, "ジャンル", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span><br>
          <%= f.collection_select(:genre_id, @genres, :id, :name, autocomplete: "genre_id", :class => "form-control", include_blank: "ジャンルを選択ください") %>
        </div>

        <div class="form-group">
          <%= f.label :start_business_hours, "営業時間", :class => "form-label" %>&nbsp;<span class="label label-danger">未選択箇所は「00」で送信されます</span><br>
          <%= f.time_select :start_business_hours, autocomplete: "start_business_hours", include_blank: "", :class => "form-control" %>〜<%= f.time_select :finish_business_hours, autocomplete: "finish_business_hours", include_blank: "", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :station, "最寄駅", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :station, autocomplete: "station", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "電話番号(ハイフンなし)", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :phone_number, autocomplete: "phone_number", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :home_page, "ホームページ", :class => "form-label" %>&nbsp;<span class="label label-danger">ホームページがない場合は「なし」と入力ください</span></span>
          <%= f.text_field :home_page, autocomplete: "home_page", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :holiday, "定休日", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :holiday, autocomplete: "holiday", :class => "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録する", :class => "btn btn-primary btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>