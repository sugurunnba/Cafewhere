<div class="container">
  <div class="row">
    <div class="card col-sm-6 mx-auto mt-5">
      <div class="card-body">
        <div>
          <i class="fa fa-history"></i><%= link_to "戻る", user_path(current_user) %>
        </div>
<br>
        <%= render 'layouts/error_messages', messages: @user %>
        <h3 class="mt-1 mb-3">登録情報編集</h3>
        <%= form_with model: @user, url: user_path(@user), local:true do |f| %>

        <div class="form-group">
          <%= f.label :name, "ニックネーム", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.text_field :name, autocomplete: "name", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", :class => "form-label" %>&nbsp;<span class="label label-danger">必須</span>
          <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "自己紹介", :class => "form-label" %>
          <%= f.text_field :introduction, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :gender, "男性" %>
          <%= f.radio_button :gender, "男性", autofocus: true %>
          <%= f.label :gender, "女性" %>
          <%= f.radio_button :gender, "女性", autofocus: true %>
        </div>

        <div class="actions text-center">
          <%= f.submit "編集を保存する", :class => "btn btn-primary" %>
          <%= link_to "退会する", quit_users_path, :class => "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

